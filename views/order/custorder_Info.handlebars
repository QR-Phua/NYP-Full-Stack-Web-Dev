<style>
    .fa-check {
        font-size: 200%;
        margin-top: 30px;
        margin-bottom: 30px;
        ;
    }

    .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0px 14px 28px 0px rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        border-radius: 10px;
        /* 5px rounded corners */
    }

    #item_Image {
        max-height: 400px;
        min-height: 400px;
        position: relative;
        object-fit: scale-down;
    }

    #tracker-status {
        display: flex;
        align-items: stretch;
        /* Default */
        justify-content: space-between;
        width: 100%;
        margin: 0;
        padding: 0;
    }

    .status_Desc{
        display: inline;
        /* Default */
        list-style-type: none;
        padding: 10px 30px 0px 30px;
    }

    
</style>

<section>
    <div class="row pt-5">
        <div class="col-lg-5 col-md-12 col-sm-12 mb-5 mt-3" id="first_Column">
            <img class="w-100" id="item_Image"
                src="{{order_Item.image}}"
                alt="Card image cap">
        </div>

        <div class="col-lg-7 col-md-12 col-sm-12 mb-5 mt-3">
            <div class="pt-5 pb-4">
                <h1 id="item_Status">{{order_Item.status}}</h1>
            </div>
            <div class="pb-5 pt-5">
                <div class="progress mb-4" style="height: 10px;">
                    <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="25"
                        aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <ul id="tracker-status"  class="flex-row">
                    <li class="status_Desc" style="display:inline;">Processing</li>
                    <li class="status_Desc" style="display:inline;">Preparing to Ship</li>
                    <li class="status_Desc" style="display:inline;">Shipped</li>
                    <li class="status_Desc" style="display:inline;">Delivered</li>
                </ul>
                {{#unless user}}
                <form method="get" action="/showLogin">
                    <button class="btn btn-primary mt-5" type="submit" role="button" style="width: 100%;">Log In for more details</button>
                </form>
                {{/unless}}
            </div>
        </div>
    </div>
    <hr>
    <div class="row">

        <div class="col-lg-4 col-md-12 col-sm-12 mb-5 mt-3"  >
            
            <h3 class="mb-3">Item Information</h3>
            <h5 class="mb-3">{{order_Item.product_Name}}</h5>
            {{#if user}}
            <h6>Price: ${{order_Item.price}} (each)</h6>
            <h6>Quantity: {{order_Item.quantity}}</h6>
            
            <strong>Item Total: ${{ get_Item_Total order_Item.price order_Item.quantity}}</strong>
            
            {{/if}}
        </div>
        <div class="col-lg-4 col-md-12 col-sm-12 mb-5 mt-3">
            <h3 class="mb-3">Shipping Information</h3>
            <h5>{{order.shipping_Type}} shipping</h5>
            <h6>{{order.first_Name}} {{order.last_Name}}</h6>
            {{#if user}}
            <h6>{{order.address}} </h6> 
            <h6>{{order.apartment}} </h6> 
            <h6>{{order.city}} </h6> 
            <h6>{{order.country}} </h6> 
            <h6>{{order.post_Code}} </h6>  
            
            {{/if}}
        </div>
        <div class="col-lg-4 col-md-12 col-sm-12 mb-5 mt-3"  >
            <h3 class="mb-3">Contact Information</h3>
            <h6>{{order.first_Name}} {{order.last_Name}}</h6>
            {{#if user}}
            <h6>{{order.email}} </h6> 
            <h6>{{order.phone}} </h6>  
            {{else}}
            <h6>{{maskEmail order.email}} </h6> 
            
            {{/if}}
        </div>
    </div>
    
    <div class="row mt-3 ml-1">
        <a class="d-block mb-3 mb-sm-0" href="/order/custorder_All">
            <span class="fa fa-arrow-left mr-2"></span>
            Back to all orders
        </a>
    </div>
    
</section>