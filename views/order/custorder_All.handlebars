<style>
    .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0px 14px 28px 0px rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        border-radius: 10px;
        max-width: 500px;
        /* 5px rounded corners */
    }

    .card-img-top {
        max-height: 290px;
        min-height: 290px;
        position: relative;
        object-fit: scale-down;
    }

    .fa-box {
        font-size: 200%;
        margin-top: 30px;
        margin-bottom: 30px;
    }

    .text-center {
        text-align: center !important;
    }
</style>

<section>
    {{#if items}}
    <div class="pb-5 pt-5">
        <h1 class="h1">All orders placed</h1>
    </div>

    {{#each items}}

    <div class="row">
        <div class="col-lg-10 col-md-8 col-sm-6">
            {{#each this}}
            {{#if @first}}
            <div class="row pl-3">
                <h2>Order Number: {{order_PK_ID}}<h2>
            </div>
            <div class="row pl-3 mb-3">
                <h6>Order Date: {{ timestamp }} UTC</h4>
            </div>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-6">
            <div class="row pl-3 mb-3">
                <a class="btn btn-primary" href="/order/custorder_Info/payment/{{order_ID}}"> View Payment Information
                </a>
            </div>
        </div>
    </div>


    {{/if}}
    {{/each}}
    <div class="row">
        {{#each this}}
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card mb-5" id="id_{{order_ID}}_{{product_Name}}"
                onclick=" window.location.assign('/order/custorder_Info/{{order_ID}}/{{product_Name}}')">
                <img class="card-img-top w-100" src={{image}} alt="Card image cap">
                <div class="card-body">
                    <h3>{{product_Name}}</h3>
                    <hr>
                    <h4>{{status}}</h3>

                </div>
            </div>
        </div>
        {{/each}}
    </div>



    {{/each}}

    {{else}}
    <div class="w-md-80 w-lg-60 text-center mx-md-auto">
        <div class="mb-5">

            <span class="fas fa-box"></span>

            <h1 class="h2">You have no orders</h1>
            <p>Check back here when you have made a purchase!</p>
        </div>
        <a class="btn btn-primary btn-wide" href="/">Back to Home</a>
        {{/if}}

</section>