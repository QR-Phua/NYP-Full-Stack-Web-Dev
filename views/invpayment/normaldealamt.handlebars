<h1 id="MainHeader">Inventory Management</h1>
<h5 id="breadcrumb">Staff>Payment>Normal>Amounts</h5>
{{>_invnavbar}}
<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<img class="logo" src="/img/Supplier.png">
			<h3 class="text-center">Buy Rattan Unit</h3>
			<form method="post" action="/invpayment/normaldealamt/{{transactid}}" enctype="multipart/form-data"> 
				<div class="form-group">
					<label for="transactid">ID</label>
					<input type="text" name="transactid" class="form-control" value="{{transactid}}" readonly>
				</div>
				<div class="form-group">
					<label for="transactname">Company</label>
					<input type="text" name="transactname" class="form-control" value="{{transactname}}" readonly>
				</div>
				<div class="form-group">
					<label for="transactprice">Price Per Unit</label>
					<input type="text" name="transactprice" class="form-control" value="{{transactprice}}" readonly>
				</div>
                <div class="form-group">
					<label for="transactunit">Number of Units</label>
					<input type="number" name="transactunit" class="form-control" value="{{transactunit}}" required>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
				<a id="CancelButton" class="btn btn-primary" href="/transaction/viewTransaction">Cancel</a>
			</form>
		</div>
	</div>
</div>

<script>
		let autocomplete;
		function activatePlacesSearch(){
			var options;
			var location = document.getElementById('suplocation');
			if (location == "Singapore"){
				options = {
					types: ['(cities)'],
					componentRestrictions: {country: "sg"}
				};
			}
			else if (location == "Malaysia"){
				options = {
					types: ['(cities)'],
					componentRestrictions: {country: "my"}
				};
			}
			else if (location == "United States"){
				options = {
					types: ['(cities)'],
					componentRestrictions: {country: "us"}
				};
			}
			var input = document.getElementById('searchaddress');
  			new google.maps.places.Autocomplete(input, options);
		}
	</script>

<style>
#CancelButton{
    color: white;
    text-decoration: none;
}
#MainHeader{
	text-align: center;
	text-decoration: underline;
}
