<h1 id="MainHeader">Inventory Management</h1>
<h5 id="breadcrumb">Staff>Payment>Normal>Details</h5>
{{>_invnavbar}}
<div class="row">
		<div class="card card-body" id="cardbody">
			<img class="logo" src="/img/OrderSlip.png">
			<h3 class="text-center">Payment Details</h3>
			<form method="post" action="/invpayment/normaldealcart/{{transactid}}"> 
                <div class="form-group" id="CurrentDate">
                        <label for="supdate">Current Date</label>
					    <input id="datepicker" width="200" name="supdate" readonly/>
				</div>
                <div class="form-group">
                    <label class="font-italic">Payment Method</label>
                    <br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="Invoice" value="Invoice" name="PayType" checked>
						<label class="form-check-label" for="Invoice">Invoice</label>
					</div>
					<div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="Receipt" value="Receipt" name="PayType">
						<label class="form-check-label" for="Receipt">Receipt</label>
					</div>
				</div>
                 <div id="CompanyTo">
                    <h2>To:</h2>
                    <div class="form-group">
                        <label for="ComPayName">Name</label>
                        <input type="text" name="ComPayName" class="form-control" value="Chun Mee Lee Rattan Furniture" required>
				    </div>
                    <div class="form-group">
                        <label for="ComPayAddress">Address</label>
                        <input type="text" name="ComPayAddress" class="form-control" value="122 Bukit Merah Lane 1, #01-68, Singapore" required>
				    </div>
                    <div class="form-group">
                        <label for="ComPayZipcode">ZipCode</label>
                        <input type="text" name="ComPayZipcode" class="form-control" value="150122" required>
				    </div>
                </div>
                <div id="SupplierFrom">
                    <h2>From:</h2>
                    <div class="form-group">
                        <label for="SupPayName">Name</label>
                        <input type="text" name="SupPayName" class="form-control" value="{{transactname}}" required>
				    </div>
                    <div class="form-group">
                        <label for="SupPayAddress">Address</label>
                        <input type="text" name="SupPayAddress" class="form-control" value="{{transactaddress}}" required>
				    </div>
                    <div class="form-group">
                        <label for="SupPayZipcode">ZipCode</label>
                        <input type="text" name="SupPayZipcode" class="form-control" value="{{transactzipcode}}" required>
				    </div>
                </div>
                <div id="PayingStock">
                    <h3>Payment</h3>
                    <label for="PayPrice">Cost</label>
                    <input width="200" name="PayPrice" value="{{transactprice}}" readonly/>
                    <label for="PayAmt">Unit</label>
                    <input width="200" name="PayAmt" value="{{transactunit}}" readonly/>
                    <label for="PayTotal">Total Cost</label>
                    <input width="200" name="PayTotal" value="{{transacttotal}}" readonly/>
                </div>
				<button type="submit" class="btn btn-primary">Accept</button>
                <a id="CancelButton" class="btn btn-primary" href="/transaction/viewTransaction">Cancel</a>
			</form>
		</div>
</div>

<script>
	$('#datepicker').datepicker({
		value: new Date().toLocaleDateString(),
		format: 'dd/mm/yyyy',
		uiLibrary: 'bootstrap4',
	});

    $('table tfoot td').each(function(index) {
        var total = 0;
        $('tbody tr').each(function() {
            total += +$('td', this).eq(index).text(); //+ will convert string to number
        });
        $(this).text(total);
    })
</script>

<style>

#CancelButton{
    color: white;
    text-decoration: none;
}
#SupplierFrom{
    width: 49%;
}
#CompanyTo{
    float: right;
    width: 49%;
}
#PayingStock{
    padding-top: 10px;
}
#cardbody{
    width: 600px;
}
#MainHeader{
	text-align: center;
	text-decoration: underline;
}
.card {
    /* Add shadows to create the "card" effect */
    box-shadow: 0px 14px 28px 0px rgba(0, 0, 0, 0.2);
    transition: 0.3s;
    border-radius: 10px;
    /* 5px rounded corners */
}
#PaymentTable {
    width:100%;
    text-align: center;
}
#PaymentTable, td, th {
    border: 1px solid black;
}
</style>