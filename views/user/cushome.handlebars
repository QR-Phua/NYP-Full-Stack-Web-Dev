{{#if user}}
{{with user}}
<div class="jumbotron text-center">
  <div class="container">
    <h1 class="display-4">{{title}}</h1>
    <p class="lead">Welcome {{username}} to Rattan Furniture Store</p>
  </div>
  <br>
</div>
<div>
  <h2 class="display-4">We sell handmade Rattan Furnitures!</h2>
  <a href="/products/viewProducts" class="btn">Come and take a look! &#10153;</a>
<div class="small-container">
  <h2 class="title">Featured Products</h2>
  <div class="row">
    <div class="col-3" width="200px">
      <img src="../img/Bahama_Mirror.jpg">
      <h4> Bahama Rattan Mirror </h4>
      <p class="col-3-p"> $50 </p>
    </div>
    <div class="col-3" width="200px">
      <img src="../img/Black_and_Rattan_Screen_Bath.jpg">
      <h4> Black Rattan Screen Bath </h4>
      <p class="col-3-p"> $89 </p>
    </div>
    <div class="col-3" width="200px">
      <img src="../img/bungalow-standing-lamp.jpg">
      <h4> Rattan standing lamp </h4>
      <p class="col-3-p"> $70 </p>
    </div>

    <div class="row">
      <div class="col-3" width="200px">
        <img src="../img/coffee_table_rattan.jpg">
        <h4> Rattan Coffee Table </h4>
        <p class="col-3-p"> $100 </p>
      </div>
      <div class="col-3" width="200px">
        <img src="../img/Rattan_Sofa.jpg">
        <h4> Rattan Sofa </h4>
        <p class="col-3-p"> $300 </p>
      </div>
      <div class="col-3" width="200px">
        <img src="../img/rattan-baby-bed.jpg">
        <h4> Rattan Baby Bed </h4>
        <p class="col-3-p"> $250 </p>
      </div>
    </div>
  </div>
</div>
</div>
{{/with}}
{{/if}}
<style>
  .btn {
    display: inline-block;
    background: #0275d8;
    color: white;
    padding: 8px 30px;
    margin: 30px 0;
    border-radius: 30px;
    transition: background 0.5s;
  }

  .btn:hover {
    background: #60cdf8;
  }

  .small-container{
    max-width: 1080px;
    margin: auto;
    padding-left: 25px;
    padding-right: 25px;
  }

  .title {
    text-align: center;
    margin: 0 auto 80px;
    padding: relative;
    line-height: 60px;
  }

  .col-3 {
    flex-basis: 30%;
    min-width: 250px;
    font-weight: normal;
    transition: transform 0.5s;
  }

  .col-3-p {
    font-size: 14px;
  }

  img {
    width: 100%;
    height: 100%;
  }

  .col-3:hover {
    transform: translateY(-5px);
  }
  
</style>