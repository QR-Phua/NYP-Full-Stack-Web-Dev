<style>
    .btn {
    width: 100px;
    height: 35px;
    background: #4E9CAF;
    text-align: center;
    border-radius: 10px;
    color: rgb(0, 0, 0);
    font-weight: bold;
    line-height: 22px;
}

    img{
        display: center;
    }
</style>
{{#if user}}
<div class="jumbotron text-center">
    {{#with user}}
        <h2>{{username}}'s profile</h2>
        <table class="table">
        <tr>
            <td>Username:</td>
            <td>{{username}}</td>
        </tr>
        <tr>
            <td>Name:</td>
            <td>{{name}}</td>
        </tr>
        <tr>
            <td>Contact:</td>
            <td>{{contact}}</td>
        </tr>
        <tr>
            <td>Address:</td>
            <td>{{address}}</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>{{email}}</td>
        </tr>
        </table>
        <a href="/user/edit/{{id}}" class="card-link"><i class="fas fa-pencil-alt"></i>Edit</a>
        <a href="/user/editpass/{{id}}" class="card-link"><i class="fas fa-pencil-alt"></i>Change Password</a>
        <a href="/user/delete/{{id}}" class="card-link" data-toggle="confirmation"data-title="Are you sure? This cannot be undone."><i class="far fa-trash-alt"></i>Delete</a>
    {{/with}}
</div>
{{/if}}