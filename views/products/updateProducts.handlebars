<div class="container">
	<div class="card card-body">
		<h3>UPDATE PRODUCTS</h3>
		<form action="/products/edit/{{product.id}}" method="post" enctype="multipart/form-data">
			<input type="hidden" name="_method" value="PUT">
			<div class="form-group">
				<label for="prodImg">Image URL</label>
				<input type="file" class="form-control" name="image" required>
			</div>
			<div class="form-group">
				<label class="font-normal" for="prodName">Name</label>
				<input type="text" class="form-control" name="prodName" value="{{product.prodName}}" required>
			</div>
			<div class="form-group">
				<label class="font-normal" for="supplyCost">Supply Cost</label>
				<input type="text" class="form-control" name="supplyCost" value="{{product.supplyCost}}" required>
			</div>
			<div class="form-group">
				<label class="font-normal" for="prodPrice">Price</label>
				<input type="text" class="form-control" name="prodPrice" value="{{product.prodPrice}}" required>
			</div>
			<div class="form-group">
				<label class="font-normal" for="prodDesc">Description</label>
				<input type="text" class="form-control" name="prodDesc" value="{{product.prodDesc}}" required>
			</div>
			<div class="form-group">
				<label class="font" for="prodDimensions">Dimensions</lavel>
				<input type="text" class="form-control" name="prodDimen" value="{{product.prodDimensions}}" required>
			</div>
			<div class="form-group">
				<label class="font-normal" for="prodQuantity">Quantity</label>
				<input type="text" class="form-control" name="prodQuantity" value="{{product.prodQuantity}}" required>
			</div>
			<br>
			<button id="butAddProduct" type="submit" class="btn">Save</button>
			&nbsp;
			<button onclick="/products/allProducts" type="submit" class="btn">Cancel</button>
		</form>
	</div>
</div>

<style>
	.btn {
		display: inline-block;
		background: burlywood;
		color: white;
		transition: background 0.5s;
	}

	.btn:hover {
		background: burlywood;
	}
</style>