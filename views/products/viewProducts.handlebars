<body>

  <div class="small-container">

    <div class="row">
      <h2 class="title">All products</h2>
      <select name="formal" onchange="javascript:handleSelect(this)">
        <option selected disabled>Sort by</option>
        <option value="/products/sort/latest">Sort by latest</option>
        <option value="/products/sort/earliest">Sort by earliest</option>
        <option value="/products/sort/name">Sort by name</option>
        <option value="/products/sort/price">Sort by price</option>
      </select>
    </div>

    {{#if products}}

    <div class="row">
      {{#each products}}
      <div class="col-4" style="margin-bottom:112px;">
        <a href="/products/productsDetail/{{id}}">
          <img src="/{{image}}" width="100%">
          <h4> {{prodName}} </h4>
          <p class="col-4-p"> ${{prodPrice}} </p>
          <input type="hidden" name="prodquantity" value="{{prodQuantity}}">
        </a>
      </div>
      {{/each}}
    </div>
    {{else}}
    <h2>No products</h2>
    {{/if}}

    <br>
    
    <div class="page-btn">
      <span>1</span>
      <span>2</span>
      <span>3</span>
      <span>4</span>
      <span>&#8594</span>
    </div>
  </div>
</body>



<script type="text/javascript">
  function handleSelect(elm) {
    window.location = elm.value;
  }
</script>

