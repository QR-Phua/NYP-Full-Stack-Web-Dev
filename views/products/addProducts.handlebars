<div class="container">
	<div class="card card-body">
		<h3>ADD PRODUCTS</h3>
		<form action="/products/addProducts" method="post" id="addProducts" enctype="multipart/form-data">
			<div class="form-group">
				<label class="font-normal" for="prodImg">Image URL</label>
				<input type="file" class="form-control" name="image" required>
			</div>
			<div class="form-group">
				<label class="font-normal" for="prodName">Name</label>
				<input type="text" class="form-control" name="prodName" required>
			</div>
			<div class="form-group">
				<label class="font-normal" for="supplyCost">Supply Cost</label>
				<input type="text" class="form-control" name="supplyCost" required>
			</div>
			<div class="form-group">
				<label class="font-normal" for="prodPrice">Price</label>
				<input type="text" class="form-control" name="prodPrice" required>
			</div>
			<div class="form-group">
				<label class="font-normal" for="prodDesc">Description</label>
				<input type="text" class="form-control" name="prodDesc" required>
			</div>
			<div>
			<label class="font">Dimensions</label>
			<input type="text" class="form-control" name="prodDimen" required>
			</div>
			<div class="form-group">
				<label class="font-normal" for="prodQuantity">Quantity</label>
				<input type="text" class="form-control" name="prodQuantity" required>
			</div>
			<br>
			<button id="butAddVideo" type="submit" class="btn btn-primary">Save</button>
		</form>
	</div>
</div>
