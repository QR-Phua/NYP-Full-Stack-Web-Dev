<h1 id="MainHeader">Inventory Management</h1>
{{>_invnavbar}}
<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<img class="logo" src="/img/Supplier.png">
			<h3 class="text-center">Update Delivery</h3>
			<form method="post" action="/invdelivery/addinvdelivery"> 
				<div class="form-group">
					<label for="deliveryid">Delivery ID</label>
					<select name="deliveryid" id="deliveryid" class="form-control"  value="{{deliveryid}}" required>
						{{#each deliveries}}
  							<option value="{{id}}">{{id}}</option>
  						{{/each}}
					</select>
				</div>
                <div class="form-group">
					<label for="deliverystatus">Supplier Name</label>
					<select name="deliverystatus" id="deliverystatus" class="form-control"  value="{{deliverystatus}}" required>
  							<option value="Preparing">Preparing</option>
                            <option value="Delivering">Delivering</option>
                            <option value="Delivered">Delivered</option>
					</select>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</div>

<style>
#MainHeader{
	text-align: center;
	text-decoration: underline;
}
.card {
    /* Add shadows to create the "card" effect */
    box-shadow: 0px 14px 28px 0px rgba(0, 0, 0, 0.2);
    transition: 0.3s;
    border-radius: 10px;
    /* 5px rounded corners */
}

#priceinput{
	float:right;
	width: 78%;
}

#countrydollar{
	width: 80px;
}
</style>

<script>
	$('#datepicker').datepicker({
		value: new Date().toLocaleDateString(),
		format: 'dd/mm/yyyy',
		uiLibrary: 'bootstrap4',
	});
</script>