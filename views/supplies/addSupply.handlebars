<h1 id="MainHeader">Inventory Management</h1>
{{>_invnavbar}}
<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<img class="logo" src="/img/Supplier.png">
			<h3 class="text-center">Add Rattan Supply</h3>
			<form method="post" action="/supplies/addSupply"> 
				<div class="form-group">
					<label for="supnameDD">Supplier Name</label>
					<select name="supnameDD" id="supnameDD" class="form-control"  value="{{supnameDD}}" required>
						{{#each suppliers}}
  							<option value="{{id}}">{{supname}}</option>
  						{{/each}}
					</select>
				</div>
                <div class="form-group">
					<label for="supquantity">Supply Quantity</label>
					<input type="number" name="supquantity" class="form-control" value="{{supquantity}}" required>
				</div>
                <div class="form-group">
					<label for="supdate">Date</label>
					<input type="date" name="supdate" class="form-control" value="{{supdate}}" required>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</div>

<style>
#MainHeader{
    margin-left: 40%;
}
.card {
    /* Add shadows to create the "card" effect */
    box-shadow: 0px 14px 28px 0px rgba(0, 0, 0, 0.2);
    transition: 0.3s;
    border-radius: 10px;
    /* 5px rounded corners */
}
</style>