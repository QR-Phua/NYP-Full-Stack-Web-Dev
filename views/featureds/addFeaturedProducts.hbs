                <input type="file" class="form-control" name="image" required>
            </div>
            <div class="form-group">
                <label class="font-normal" for="fName">Name</label>
                <input type="text" class="form-control" name="fName" required>
            </div>
            <div class="form-group">
                <label class="font-normal" for="fPrice">Price</label>
                <input type="text" class="form-control" name="fPrice" required>
            </div>
            <br>
            <button id="butAddVideo" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
