		<div class="column">
			<div class="card">
			<h3>Cost Per Unit</h3>
			<br />
			<h4>Empty</h4>
			</div>
		</div>

		<div class="column">
			<div class="card">
			<h3>Total Cost</h3>
			<br />
			<h4>Empty</h4>
			</div>
		</div>
		
		<div class="column">
			<div class="card">
			<h3>Total Unit</h3>
			<br />
			<h4>Empty</h4>
			</div>
		</div>
		
		<div class="column">
			<div class="card">
			<h3>Last Change</h3>
			<br />
			<h4>Empty</h4>
			</div>
		</div>
	</div>
        <h3>No Stocks</h3>
      {{/if}}
	  <div>
	</div>
</div>
