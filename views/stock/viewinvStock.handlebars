		<div class="column">
			<div class="card">
			<h3>Cost Per Unit</h3>
			<br />
			<h4>$ {{cputotal}}</h4>
			</div>
		</div>

		<div class="column">
			<div class="card">
			<h3>Total Cost</h3>
			<br />
			<h4>$ {{costboughttotal}}</h4>
			</div>
		</div>
		
		<div class="column">
			<div class="card">
			<h3>Total Unit</h3>
			<br />
			<h4>{{stkboughttotal}}</h4>
			</div>
		</div>
		
		<div class="column">
			<div class="card">
			<h3>Last Change</h3>
			<br />
			<h4>{{formatDate lastdate 'DD MMM YYYY'}}</h4>
			</div>
		</div>
	</div>
