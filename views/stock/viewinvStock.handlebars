          <th>Record ID</th>
          <th>Status</th>
          <th>Biz Name</th>
          <th>Unit</th>
          <th>Total Cost</th>
          <th>Date</th>
		  <th>Damaged Rattan Returns</th>
		</tr>
        {{#each stocks}}
        <tr>
			<td>{{id}}</td>
			<td>{{stkstatus}}</td>
			<td>{{bizname}}</td>
			<td>{{stkamt}}</td>
			<td>{{stktotalcost}}</td>
			<td>{{formatDate stkdate 'DD MMM YYYY'}}</td>
			<td>
