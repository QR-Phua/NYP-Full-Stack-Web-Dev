<h1 id="MainHeader">Inventory Management</h1>
{{>_invnavbar}}
<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<img class="logo" src="/img/Supplier.png">
			<h3 class="text-center">Add New Supplier's Offer</h3>
			<form method="post" action="/transaction/addTransaction"> 
				<div class="form-group">
					<label for="supname">Supplier Name</label>
					<select name="supname" id="supname" class="form-control"  value="{{supname}}" required>
						{{#each suppliers}}
  							<option value="{{supname}}">{{supname}}</option>
  						{{/each}}
					</select>
				</div>
				<div class="form-group">
					<label for="supprice">Price per Unit</label>
					<input type="number" id="priceinput"step="any" name="supprice" class="form-control" value="{{supprice}}" required>
					<select name="countrydollar" id="countrydollar" class="form-control"  value="{{countrydollar}}" required>
  						<option value="SGD">SGD</option>
						<option value="MYR">MYR</option>
						<option value="USD">USD</option>
					</select>
				</div>
                <div class="form-group">
					<label for="supdate">Date Created</label>
					<input id="datepicker" width="200" name="supdate" readonly/>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</div>

<style>
#MainHeader{
	text-align: center;
	text-decoration: underline;
}
.card {
    /* Add shadows to create the "card" effect */
    box-shadow: 0px 14px 28px 0px rgba(0, 0, 0, 0.2);
    transition: 0.3s;
    border-radius: 10px;
    /* 5px rounded corners */
}

#priceinput{
	float:right;
	width: 78%;
}

#countrydollar{
	width: 80px;
}
</style>

<script>
	$('#datepicker').datepicker({
		value: new Date().toLocaleDateString(),
		format: 'dd/mm/yyyy',
		uiLibrary: 'bootstrap4',
	});
</script>