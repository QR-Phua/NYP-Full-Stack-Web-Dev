<h1 id="MainHeader">Inventory Management</h1>
{{>_invnavbar}}
<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<img class="logo" src="/img/InventoryIcon.jpg">
			<h3 class="text-center">Add Product</h3>
			<form method="post" action="/staff/newInventory"> 
				<div class="form-group">
					<label for="prodname">Product Name</label>
					<input type="text" name="prodname" class="form-control" value="{{prodname}}" required>
				</div>
                <div class="form-group">
					<label for="proddesc">Product Description</label>
					<input type="text" name="proddesc" class="form-control" value="{{proddesc}}" required>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</div>

<style>
#MainHeader{
    margin-left: 40%;
}
.card {
    /* Add shadows to create the "card" effect */
    box-shadow: 0px 14px 28px 0px rgba(0, 0, 0, 0.2);
    transition: 0.3s;
    border-radius: 10px;
    /* 5px rounded corners */
}
</style>