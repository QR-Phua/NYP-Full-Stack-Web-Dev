<h1 id="MainHeader">Inventory Management</h1>
{{>_invnavbar}}
<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<img class="logo" src="/img/InventoryIcon.jpg">
			<h3 class="text-center">Add Stock Quantity</h3>
			<form method="post" action="/staff/addInventory"> 
				<div class="form-group">
					<label for="invname">Inventory Name</label>
					<select name="invname" id="inventory" class="form-control" value="{{invname}}" required>
  						<option value="inv1">Rattan Table</option>
  						<option value="inv2">Rattan Chair</option>
  						<option value="inv3">Rattan Stool</option>
  						<option value="inv4">Rattan Arm Chair</option>
					</select>
				</div>
                <div class="form-group">
					<label for="invquantity">Quantity</label>
					<input type="number" name="invquantity" class="form-control" value="{{invquantity}}" required>
				</div>
				<div class="form-group">
					<label for="invsupply">Amount of Rattan Supply Used</label>
					<input type="number" name="invsupply" class="form-control" value="{{invsupply}}" required>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</div>

<style>
#MainHeader{
    margin-left: 40%;
}
.card {
    /* Add shadows to create the "card" effect */
    box-shadow: 0px 14px 28px 0px rgba(0, 0, 0, 0.2);
    transition: 0.3s;
    border-radius: 10px;
    /* 5px rounded corners */
}
</style>