<h1 id="MainHeader">Inventory Management</h1>
<h5 id="breadcrumb">Staff>Supplier>Mail</h5>
{{>_invnavbar}}
<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<img class="logo" src="/img/Mail.jpeg">
			<h3 class="text-center">Emailing Supplier</h3>
			<form method="post" action="/supplier/emailSupplier/{{supplier.id}}" enctype="multipart/form-data"> 
				<div class="form-group">
					<label for="supemail">To :</label>
					<input type="text" name="supemail" class="form-control" value="{{supplier.supemail}}" readonly>
				</div>
				<div class="form-group">
					<label for="emailTitle">Title :</label>
					<input type="text" name="emailTitle" class="form-control" value="{{emailTitle}}" required>
				</div>
				<div class="form-group">
					<label for="emailSubject">Subject :</label>
					<input type="text" name="emailSubject" class="form-control" value="{{emailSubject}}" required>
				</div>
				<div class="form-group">
					<label for="emailContent">Content</label>
                    <textarea type="text" name="emailContent" class="form-control" value="{{emailContent}}" required></textarea>
				</div>
				<button type="submit" class="btn btn-primary">Send</button>
				<a id="CancelButton" class="btn btn-primary" href="/supplier/viewSupplier">Cancel</a>
			</form>
		</div>
	</div>
</div>

<script>
		let autocomplete;
		function activatePlacesSearch(){
			var options;
			var location = document.getElementById('suplocation');
			if (location == "Singapore"){
				options = {
					types: ['(cities)'],
					componentRestrictions: {country: "sg"}
				};
			}
			else if (location == "Malaysia"){
				options = {
					types: ['(cities)'],
					componentRestrictions: {country: "my"}
				};
			}
			else if (location == "United States"){
				options = {
					types: ['(cities)'],
					componentRestrictions: {country: "us"}
				};
			}
			var input = document.getElementById('searchaddress');
  			new google.maps.places.Autocomplete(input, options);
		}
	</script>
	
