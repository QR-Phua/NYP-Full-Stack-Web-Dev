<h1 id="MainHeader">Inventory Management</h1>
{{>_invnavbar}}
<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<img class="logo" src="/img/Supplier.png">
			<h3 class="text-center">Removing Supplier</h3>
			<form method="post" action="/supplier/rmvingSupplier/{{supplier.id}}"> 
				<div class="form-group">
					<p>Company's Name : {{supplier.supname}}</p>
				</div>
				<div class="form-group">
					<p>Contact's Name : {{supplier.supcontactname}}</p>
				</div>
				<div class="form-group">
					<p>Email : {{supplier.supemail}}</p>
				</div>
				<div class="form-group">
					<p>Contact Number : {{supplier.supcontactno}}</p>
				</div>
				<div class="form-group">
					<p>Country : {{supplier.suplocation}}</p>
				</div>
				<div class="form-group">
					<p>Address : {{supplier.supaddress}}</p>
				</div>
				<div class="form-group">
					<p>Postal Code : {{supplier.suppostalcode}}</p>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</div>

<style>
#MainHeader{
	text-align: center;
	text-decoration: underline;
}
.card {
    /* Add shadows to create the "card" effect */
    box-shadow: 0px 14px 28px 0px rgba(0, 0, 0, 0.2);
    transition: 0.3s;
    border-radius: 10px;
    /* 5px rounded corners */
}
</style>