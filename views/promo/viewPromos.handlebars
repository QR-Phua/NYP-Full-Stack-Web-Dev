<style>
    .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0px 14px 28px 0px rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        border-radius: 10px;
        max-width: 500px;
        /* 5px rounded corners */
    }

    .card-img-top {
        max-height: 290px;
        min-height: 290px;
        position: relative;
        object-fit: scale-down;
    }

    .fa-box {
        font-size: 200%;
        margin-top: 30px;
        margin-bottom: 30px;
    }

    .text-center {
        text-align: center !important;
    }
</style>

<script>
    $(document).ready(function () {
        const month = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];

        const d = new Date();
        let name = month[d.getMonth()];

        $('.title_Month').text(name);
    })

</script>

<section>
    {{#if promos}}
    <div class="pb-5 pt-5">
        <h1 class="h1">All promotional codes for the month of <span class="title_Month"></span></h1>
    </div>

   

    <div class="row">
         {{#each promos}}
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card mb-5" id="id_{{this.order_ID}}_{{product_Name}}">
                <img class="card-img-top w-100" src="https://thumbs.dreamstime.com/b/discount-stamp-vector-clip-art-33305813.jpg">
                <div class="card-body">
                    <h3>Code: {{this.code}}</h3>
                    <hr>
                    <h6>{{this.description}}</h6>

                </div>
            </div>
        </div>
        {{/each}}
    </div>



    

    {{else}}
    <div class="w-md-80 w-lg-60 text-center mx-md-auto">
        <div class="mb-5">

            <span class="fas fa-box"></span>

            <h1 class="h2">There are no promotional codes for the month of <span class="title_Month"></span></h1>
            <p>Check back here soon!</p>
        </div>
        <a class="btn btn-primary btn-wide" href="/">Back to Home</a>
        {{/if}}

</section>