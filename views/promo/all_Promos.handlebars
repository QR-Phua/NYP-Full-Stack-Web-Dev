<style>
    .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0px 14px 28px 0px rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        border-radius: 15px;

        /* 5px rounded corners */
    }

    #example {}


    .fa-box {
        font-size: 200%;
        margin-top: 30px;
        margin-bottom: 30px;
    }

    .text-center {
        text-align: center !important;
    }
</style>


<script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.4/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
<section>
    {{#if promos}}
    <div class="row pb-5 pt-5">
        <div class="col-lg-10 col-md-9 col-sm-8 ">
            <h1 class="h1">All promotional codes</h1>
        </div>
        <div class="col-lg-2 col-md-3 col-sm-4 ">
            <a class="btn btn-primary" href="/promo/new_Entry/">Create new promo code</a>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Promotional Code</th>
                        <th>Status</th>
                        <th>Discount %</th>
                        <th>Target Users</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each promos}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.code}}</td>
                        <td>{{this.status}}</td>
                        <td>{{this.discount}}</td>
                        <td>{{this.target}}</td>
                        <td><a lass="btn btn-primary" href="/promo/update_Promo/{{this.id}}">View more details</a></td>
                    </tr>
                    {{/each}}
            </table>
        </div>
    </div>

    {{else}}
    <div class="w-md-80 w-lg-60 text-center mx-md-auto">
        <div class="mb-5">

            <span class="fas fa-box"></span>

            <h1 class="h2">There are no promotional codes</h1>
            <p>Check back here when you have added one!</p>
        </div>
        <a class="btn btn-primary btn-wide" href="/promo/new_Entry/">Create new promo code</a>
        {{/if}}

</section>